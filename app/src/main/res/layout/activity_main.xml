<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shalom.myapplication.MainActivity">

    <TextView
        android:id="@+id/lblDate"
        android:layout_width="250dp"
        android:layout_height="86dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/lblCavana"
        android:layout_width="242dp"
        android:layout_height="126dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.774"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btnSetDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lblCavana"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtMonth" />

    <EditText
        android:id="@+id/txtDay"
        android:layout_width="69dp"
        android:layout_height="41dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number|numberSigned"
        android:text="יום"
        app:layout_constraintBottom_toTopOf="@+id/lblCavana"
        app:layout_constraintLeft_toRightOf="@+id/txtMonth"
        app:layout_constraintTop_toBottomOf="@+id/lblDate"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.503"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/txtMonth"
        android:layout_width="83dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number|numberSigned"
        android:text="חודש"
        app:layout_constraintBottom_toTopOf="@+id/lblCavana"
        app:layout_constraintTop_toBottomOf="@+id/lblDate"
        app:layout_constraintRight_toLeftOf="@+id/txtDay"
        app:layout_constraintLeft_toRightOf="@+id/txtYear" />

    <EditText
        android:id="@+id/txtYear"
        android:layout_width="107dp"
        android:layout_height="41dp"
        android:layout_marginRight="7dp"
        android:ems="10"
        android:inputType="number|numberSigned"
        android:text="שנה"
        app:layout_constraintRight_toLeftOf="@+id/txtMonth"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lblDate"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lblCavana"
        android:layout_marginEnd="7dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

</android.support.constraint.ConstraintLayout>
